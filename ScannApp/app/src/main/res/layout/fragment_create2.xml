<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CreateFragment">

<LinearLayout
    android:layout_marginTop="125dp"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/white"
    >
<Button
    android:layout_marginTop="11dp"

    android:layout_marginLeft="5dp"
    android:layout_width="125dp"
    android:layout_height="wrap_content"
    android:text="Remove ALL"
    android:textSize="13dp"
    android:textColor="@color/white"
    android:drawableLeft="@drawable/ic_action_remove"
    android:background="@drawable/btn_removeall"/>

    <ImageButton
        android:id="@+id/cameraButton"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="11dp"
        android:layout_width="87dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_camera"
        android:src="@drawable/ic_action_camera"
        />
    <Button
        android:layout_marginTop="11dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Select Filter"
        android:textSize="13dp"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_action_setting"
        android:background="@drawable/btn_select_filter"/>




</LinearLayout>

    <ImageView
        android:id="@+id/iV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>